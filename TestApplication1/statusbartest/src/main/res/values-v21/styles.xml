<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#6033a3</item>
        <item name="colorPrimaryDark">#512Df1</item>
        <item name="colorAccent">#FF4081</item>

        <item name="android:windowBackground">@color/window_background</item>

        <!--<item name="android:fitsSystemWindows">true</item>-->

         <!--透明状态栏-->
        <item name="android:windowTranslucentStatus">true</item>
         <!--透明导航栏-->
        <!--<item name="android:windowTranslucentNavigation">true</item>-->

        <!-- 设置绘制系统栏颜色,只有设置之后statusBarColor navigationBarColor才有效,但如果设置了windowTranslucentStatus windowTranslucentNavigation 则会无效 -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <!-- 设置状态栏为透明 -->
        <item name="android:statusBarColor">@color/systembar1</item>
        <!--<item name="android:statusBarColor">@color/systembar1</item>-->
        <!--<item name="android:navigationBarColor">@android:color/transparent</item>-->
    </style>

</resources>
